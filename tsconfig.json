{
  "compilerOptions": {
      "lib": ["ES2020"],
      "module": "commonjs",
      "target": "ES2018",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowJs": true,
      "checkJs": true,
      "importHelpers": true,
      "jsx": "react",
      "strict": true,
      "pretty": true,
      "sourceMap": true,
      "declaration": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@/*": [
            "src/lib/*"
        ]
    }
  },
  "include": ["src/**/*"]
}